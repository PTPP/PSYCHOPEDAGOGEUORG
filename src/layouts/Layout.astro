---
import "../styles/global.css";
import BackgroundAnimation from "../components/BackgroundAnimation.astro";
import { getHreflangLinks } from "../utils/i18n";

interface Props {
	title: string;
	description?: string;
	lang?: "pl" | "en";
}

const {
	title,
	description = "Długie terminy do psychologa? Wybierz Counselling w TPP. Praktyczna pomoc w kryzysie i stresie. Bez skierowań, bez NFZ i etykietowania.",
	lang = "pl",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Hreflang Tags -->
		{
			getHreflangLinks(Astro.url.pathname).map((link) => (
				<link
					rel="alternate"
					hreflang={link.lang === "en" ? "en" : "pl"}
					href={
						new URL(link.href, "https://www.psychopedagog.org").href
					}
				/>
			))
		}
		{
			(Astro.url.pathname === "/" ||
				Astro.url.pathname === "/en" ||
				Astro.url.pathname === "/en/") && (
				<link
					rel="alternate"
					hreflang="x-default"
					href="https://www.psychopedagog.org/"
				/>
			)
		}

		<!-- Fonts (Optimized) -->
		<!-- Fonts are now loaded locally via global.css -->

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL("/og.png", Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta
			property="twitter:image"
			content={new URL("/og.png", Astro.url)}
		/>

		<!-- Schema.org JSON-LD -->
		<script type="application/ld+json" is:inline>
			{
				"@context": "https://schema.org",
				"@type": "MedicalBusiness",
				"name": "Towarzystwo Psychopedagogiczne",
				"alternateName": "Psychopedagogical Society",
				"url": "https://www.psychopedagog.org/",
				"logo": "https://www.psychopedagog.org/logo.png",
				"image": "https://www.psychopedagog.org/og.png",
				"description": "Profesjonalna pomoc psychologiczna, pedagogiczna i terapeutyczna. Terapia online i stacjonarnie w Bolesławcu.",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "Bolesławiec",
					"addressLocality": "Bolesławiec",
					"postalCode": "59-700",
					"addressCountry": "PL"
				},
				"priceRange": "$$",
				"telephone": "+48733379538",
				"email": "kontakt@psychopedagog.org",
				"openingHoursSpecification": [
					{
						"@type": "OpeningHoursSpecification",
						"dayOfWeek": [
							"Monday",
							"Tuesday",
							"Wednesday",
							"Thursday",
							"Friday"
						],
						"opens": "09:00",
						"closes": "20:00"
					}
				],
				"sameAs": [
					"https://www.facebook.com/psychopedagog.org",
					"https://www.instagram.com/psychopedagog_org"
				]
			}
		</script>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-RZRY73GBQW"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-RZRY73GBQW");
		</script>
		<script is:inline>
			// 1. Theme Detection
			const savedTheme = localStorage.getItem("theme");
			const systemTheme = window.matchMedia(
				"(prefers-color-scheme: dark)",
			).matches
				? "dark"
				: "light";
			const theme = savedTheme || systemTheme;
			document.documentElement.setAttribute("data-theme", theme);

			// 2. Language Detection (Root path only)
			if (
				window.location.pathname === "/" ||
				window.location.pathname === "/index.html"
			) {
				const savedLang = localStorage.getItem("lang");
				const userLang = navigator.language || navigator.userLanguage;

				if (savedLang === "en") {
					window.location.href = "/en";
				} else if (!savedLang && userLang.startsWith("en")) {
					// Detect English browser and no preference -> redirect
					window.location.href = "/en";
				}
			}
		</script>
	</head>
	<body>
		<BackgroundAnimation />
		<slot />
	</body>
</html>

<style>
	:global(body) {
		background-color: transparent;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
</style>
