---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import tdpImg from "../assets/partners/tdp.png";
import hbwImg from "../assets/partners/hbw.png";
---

<Layout
    title="Partnerzy | Psycholog Bolesławiec - Towarzystwo Psychopedagogiczne"
    description="Nasi partnerzy. Towarzystwo Psychopedagogiczne w Bolesławcu współpracuje z zaufanymi organizacjami."
    lang="pl"
>
    <Header lang="pl" />

    <main class="partners-page">
        <section class="page-header">
            <div class="container">
                <h1>Nasi Partnerzy</h1>
                <p class="subtitle">Współpracujemy z najlepszymi</p>
            </div>
        </section>

        <div class="container partners-content">
            <section class="key-partners">
                <h2 class="section-title">Partnerzy Kluczowi</h2>
                <div class="partner-card key-partner">
                    <div class="partner-logo-wrapper">
                        <Image
                            src={tdpImg}
                            alt="Towarzystwo Doradców Psychospołecznych"
                            class="partner-logo"
                            loading="eager"
                        />
                    </div>
                    <div class="partner-info">
                        <h3>Towarzystwo Doradców Psychospołecznych</h3>
                        <p class="description">
                            Organizacja pozarządowa zajmująca się certyfikacją,
                            rejestrem Doradców Psychospołecznych organizująca
                            standardy międzynarodowe w zakresie fachowego
                            działania tej profesji. Partner kluczowy.
                        </p>
                        <a
                            href="https://www.psychcon.org"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="partner-link"
                        >
                            Odwiedź stronę &rarr;
                        </a>
                    </div>
                </div>

                <div class="partner-card">
                    <div class="partner-logo-wrapper">
                        <Image
                            src={hbwImg}
                            alt="Hobweek"
                            class="partner-logo"
                            loading="eager"
                        />
                    </div>
                    <div class="partner-info">
                        <h3>Hobweek</h3>
                        <p class="description">
                            Australijski podmiot, który realizuje w ramach
                            partnerstwa nasze usługi za granicą dla
                            anglojęzycznych klientów.
                        </p>
                        <a
                            href="https://www.hobweek.com"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="partner-link"
                        >
                            Odwiedź stronę &rarr;
                        </a>
                    </div>
                </div>
            </section>

            <section class="join-partners">
                <div class="join-box">
                    <h2>Chcesz dołączyć do naszych partnerów?</h2>
                    <p>
                        Napisz na <a href="mailto:office@psychopedagog.org"
                            >office@psychopedagog.org</a
                        > -> nawiążemy współpracę.
                    </p>
                </div>
            </section>
        </div>
    </main>

    <Footer lang="pl" />
</Layout>

<style>
    .partners-page {
        background-color: var(--color-bg-body);
        min-height: 100vh;
        padding-bottom: 4rem;
    }

    .page-header {
        background-color: var(--color-bg-alt);
        padding: 3rem 0;
        text-align: center;
        border-bottom: 1px solid #eee;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--color-text-light);
    }

    .section-title {
        font-size: 1.8rem;
        color: var(--color-text);
        margin-bottom: 2rem;
        border-left: 5px solid var(--color-primary);
        padding-left: 1rem;
    }

    .partners-content {
        display: flex;
        flex-direction: column;
        gap: 4rem;
    }

    /* Partner Card */
    .partner-card {
        display: flex;
        flex-direction: column;
        background: var(--color-bg-card);
        border: 1px solid #eee;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition:
            transform 0.3s,
            box-shadow 0.3s;
    }

    @media (min-width: 768px) {
        .partner-card {
            flex-direction: row;
            align-items: center;
        }
    }

    .partner-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
    }

    .partner-logo-wrapper {
        background: var(--color-bg-alt);
        padding: 2rem;
        flex: 0 0 300px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .partner-logo {
        max-width: 100%;
        max-height: 150px;
        width: auto;
        object-fit: contain;
    }

    .partner-info {
        padding: 2rem;
        flex: 1;
    }

    .partner-info h3 {
        font-size: 1.5rem;
        color: var(--color-primary);
        margin-bottom: 1rem;
    }

    .description {
        color: var(--color-text);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .partner-link {
        color: var(--color-primary);
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .partner-link:hover {
        text-decoration: underline;
    }

    /* Join Section */
    .join-partners {
        display: flex;
        justify-content: center;
    }

    .join-box {
        background: var(--color-primary);
        color: white;
        padding: 3rem;
        border-radius: var(--radius-lg);
        text-align: center;
        max-width: 800px;
        width: 100%;
    }

    .join-box h2 {
        color: white;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .join-box p {
        font-size: 1.2rem;
    }

    .join-box a {
        color: white;
        font-weight: 700;
        text-decoration: underline;
    }

    .join-box a:hover {
        opacity: 0.9;
    }
</style>
