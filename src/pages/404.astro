---
import Layout from '../layouts/Layout.astro';

// Use Polish as default for 404, or try to detect? 
// Astro static 404 is usually single.
---

<Layout title="404 - Nie znaleziono strony" description="Strona nie istnieje.">
  <div class="container error-page">
    <h1>404</h1>
    <p>Ups! Strona, której szukasz, nie istnieje.</p>
    <a href="/" class="btn btn-primary">Wróć na stronę główną</a>
  </div>
</Layout>

<style>
  .error-page {
    text-align: center;
    padding: 6rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }
  
  h1 {
    font-size: 6rem;
    color: var(--color-primary);
    margin: 0;
  }
  
  p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--color-text-light);
  }
</style>
