---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const benefits = [
    {
        title: "Flexible Schedule",
        icon: "üóìÔ∏è",
        desc: "Flexible graphics and possibility to combine several cooperation models.",
    },
    {
        title: "Funding",
        icon: "üéì",
        desc: "Funding for training, conferences, and supervision.",
    },
    {
        title: "Interdisciplinary Team",
        icon: "ü§ù",
        desc: "Access to an interdisciplinary team, consultations, and library of materials.",
    },
    {
        title: "Diagnostic Tools",
        icon: "üß†",
        desc: "Set of diagnostic tools and licenses for online platforms.",
    },
    {
        title: "Coordinator Support",
        icon: "üë•",
        desc: "Coordinator support and opportunity to work on TPP social projects.",
    },
    {
        title: "Transparent Terms",
        icon: "ü§ù",
        desc: "Transparent financial terms and quick onboarding.",
    },
];

const faqs = [
    {
        q: "In what form do we sign the contract?",
        a: "B2B, civil law contracts, or project contracts.",
    },
    {
        q: "Can I combine cooperation with another job?",
        a: "Yes, we are open to flexible arrangements.",
    },
    {
        q: "How long does the recruitment process take?",
        a: "On average 10-14 days.",
    },
];
---

<Layout
    title="Careers | Work for Psychologists Boles≈Çawiec - TPP"
    description="Join the Psychopedagogical Society team. Jobs for psychologists, therapists, and interns. Check our offers."
    lang="en"
>
    <Header lang="en" />

    <main class="careers-page">
        <!-- Hero -->
        <section class="page-header">
            <div class="container">
                <h1>Careers at TPP</h1>
                <p class="subtitle">
                    Partnership offers and current recruitments
                </p>
                <p class="lead">
                    We are looking for specialists who want to combine reliable
                    practice with social activities. We offer hybrid work
                    models, interdisciplinary support, and space for original
                    projects.
                </p>
                <a href="#offers" class="btn btn-primary btn-lg">View Roles ‚Üì</a
                >
            </div>
        </section>

        <!-- Language Notice -->
        <div class="container">
            <div class="language-notice">
                <p>
                    Please note that our recruitment process is conducted
                    exclusively in Polish.
                </p>
                <a href="/kariera" class="btn btn-primary">
                    Switch to Polish Version
                </a>
            </div>
        </div>

        <div class="container content-container">
            <!-- Status & Models -->
            <section class="models-section">
                <div class="model-card">
                    <h3><span class="icon">üè∑Ô∏è</span> Organization Status</h3>
                    <p>
                        We are a public benefit organization. Cooperation is
                        based on a partnership model ‚Äì you can combine
                        commercial work with social projects.
                    </p>
                </div>
                <div class="model-card">
                    <h3>
                        <span class="icon">üìà</span> Onboarding & Supervision
                    </h3>
                    <p>
                        Each person receives an implementation plan, a
                        substantive mentor, and access to individual and group
                        supervision.
                    </p>
                </div>
                <div class="model-card">
                    <h3><span class="icon">üíº</span> Cooperation Models</h3>
                    <p>
                        B2B, civil law contracts, project contracts, or
                        volunteering ‚Äì we choose a form tailored to your goals
                        and availability.
                    </p>
                </div>
            </section>

            <!-- Roles -->
            <section id="offers" class="roles-section">
                <h2>Current Roles & Career Paths</h2>

                <div class="role-grid">
                    <div class="role-card">
                        <div class="role-header">
                            <h3>Psychologist / Therapist</h3>
                        </div>
                        <p>
                            Individual sessions for adults, children, or couples
                            ‚Äì stationary, online, or hybrid. Possibility to
                            conduct workshops and crisis interventions.
                        </p>
                        <ul>
                            <li>
                                Office equipped with project materials and
                                psychological tests.
                            </li>
                            <li>
                                Individual and team supervision once a month.
                            </li>
                            <li>Funding for certification and conferences.</li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Apply</a
                        >
                    </div>

                    <div class="role-card">
                        <div class="role-header">
                            <h3>Pedagogue / Special Educator</h3>
                        </div>
                        <p>
                            Educational, upbringing, and family support. Work in
                            an interdisciplinary team and implementation of
                            prevention programs in schools.
                        </p>
                        <ul>
                            <li>
                                Flexible schedules tailored to school
                                activities.
                            </li>
                            <li>
                                Access to psychoeducational materials and TPP
                                programs.
                            </li>
                            <li>
                                Possibility of working with families in
                                short-term processes.
                            </li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Apply</a
                        >
                    </div>

                    <div class="role-card">
                        <div class="role-header">
                            <h3>Sensory Integration Therapist</h3>
                        </div>
                        <p>
                            Classes in a well-equipped SI room with the
                            possibility of consultation with a psychologist and
                            physiotherapist.
                        </p>
                        <ul>
                            <li>Assistant support in conducting classes.</li>
                            <li>
                                Materials for working with parents and
                                monitoring progress.
                            </li>
                            <li>
                                Possibility to expand competencies with hand
                                therapy or TUS.
                            </li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Apply</a
                        >
                    </div>

                    <div class="role-card">
                        <div class="role-header">
                            <h3>Psychiatrist / Anesthesiologist</h3>
                        </div>
                        <p>
                            Specialist consultations in psychosomatic and
                            psycho-oncological projects. Hybrid work or guest
                            visits.
                        </p>
                        <ul>
                            <li>
                                Full administrative support and coordinator
                                support.
                            </li>
                            <li>
                                Possibility to participate in research and
                                publications.
                            </li>
                            <li>
                                Flexible settlement of visits (lump sum or
                                hourly rate).
                            </li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Schedule a call</a
                        >
                    </div>

                    <div class="role-card">
                        <div class="role-header">
                            <h3>Program Coordinator / Project Leader</h3>
                        </div>
                        <p>
                            Conducting social campaigns, workshops, and
                            publications. We are looking for people who want to
                            develop in project management.
                        </p>
                        <ul>
                            <li>Mentoring in management and communication.</li>
                            <li>Project budgets and fundraising support.</li>
                            <li>
                                Possibility of remote work (online
                                coordination).
                            </li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Apply</a
                        >
                    </div>

                    <div class="role-card">
                        <div class="role-header">
                            <h3>Intern / Volunteer</h3>
                        </div>
                        <p>
                            A program combining mentoring, training, and real
                            tasks. Choice of path: media, research, events,
                            educational projects.
                        </p>
                        <ul>
                            <li>
                                Implementation program and meeting schedule.
                            </li>
                            <li>
                                Certificate and references after completing the
                                program.
                            </li>
                            <li>
                                Possibility of publishing articles and public
                                speaking.
                            </li>
                        </ul>
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-outline">Apply</a
                        >
                    </div>
                </div>
            </section>

            <!-- Benefits -->
            <section class="benefits-section">
                <h2>What We Offer</h2>
                <div class="benefits-grid">
                    {
                        benefits.map((b) => (
                            <div class="benefit-card">
                                <span class="benefit-icon">{b.icon}</span>
                                <h3>{b.title}</h3>
                                <p>{b.desc}</p>
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- FAQ -->
            <section class="faq-section">
                <h2>FAQ</h2>
                <div class="faq-grid">
                    {
                        faqs.map((f) => (
                            <div class="faq-item">
                                <h3>{f.q}</h3>
                                <p>{f.a}</p>
                            </div>
                        ))
                    }
                </div>
                <div class="faq-contact">
                    <p>
                        Need more info? Write to <a
                            href="mailto:rekrutacja@psychopedagog.org"
                            >rekrutacja@psychopedagog.org</a
                        >.
                    </p>
                </div>
            </section>

            <!-- CTA -->
            <section class="final-cta">
                <div class="container">
                    <h2>Start cooperation with TPP</h2>
                    <p>
                        Send an application or make an appointment for a short
                        information meeting.
                    </p>
                    <div class="cta-buttons">
                        <a
                            href="https://rekrutacja.psychopedagog.org/"
                            class="btn btn-primary btn-lg">Fill out form</a
                        >
                        <a
                            href="tel:+48733379538"
                            class="btn btn-secondary btn-lg">Call us</a
                        >
                        <a
                            href="mailto:rekrutacja@psychopedagog.org"
                            class="btn btn-secondary btn-lg">Email us</a
                        >
                    </div>
                </div>
            </section>
        </div>
    </main>

    <Footer lang="en" />
</Layout>

<style>
    .careers-page {
        background-color: #fff;
        min-height: 100vh;
    }

    .page-header {
        background-color: var(--color-bg-alt);
        padding: 4rem 0;
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--color-text);
        margin-bottom: 1rem;
    }

    .lead {
        max-width: 700px;
        margin: 0 auto 2rem;
        font-size: 1.1rem;
        color: var(--color-text-light);
        line-height: 1.6;
    }

    .language-notice {
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 2rem;
        border-radius: var(--radius-md);
        text-align: center;
        margin-bottom: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .language-notice p {
        font-size: 1.1rem;
        font-weight: 500;
        margin: 0;
    }

    /* Models */
    .models-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .model-card {
        background: white;
        border: 1px solid #eee;
        padding: 1.5rem;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
    }

    .model-card h3 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--color-primary);
    }

    /* Roles */
    .roles-section {
        margin-bottom: 4rem;
    }

    .roles-section h2 {
        text-align: center;
        color: var(--color-primary);
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .role-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }

    .role-card {
        background: white;
        border: 1px solid #eee;
        border-radius: var(--radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-sm);
        transition: transform 0.3s;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .role-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
    }

    .role-header h3 {
        font-size: 1.3rem;
        color: var(--color-text);
        margin-bottom: 1rem;
        color: var(--color-primary);
    }

    .role-card ul {
        margin: 1rem 0 2rem;
        padding-left: 1rem;
        color: var(--color-text-light);
        font-size: 0.95rem;
    }

    .role-card li {
        margin-bottom: 0.4rem;
    }

    /* Benefits */
    .benefits-section {
        background: var(--color-bg-alt);
        padding: 4rem 2rem;
        border-radius: var(--radius-lg);
        margin-bottom: 4rem;
        text-align: center;
    }

    .benefits-section h2 {
        color: var(--color-primary);
        font-size: 2rem;
        margin-bottom: 3rem;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }

    .benefit-card {
        background: white;
        padding: 2rem;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        text-align: left;
    }

    .benefit-icon {
        font-size: 2rem;
        display: block;
        margin-bottom: 1rem;
    }

    .benefit-card h3 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--color-primary);
    }

    /* FAQ */
    .faq-section h2 {
        text-align: center;
        color: var(--color-primary);
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .faq-grid {
        display: grid;
        gap: 1.5rem;
        max-width: 800px;
        margin: 0 auto 2rem;
    }

    .faq-item {
        background: white;
        border: 1px solid #eee;
        padding: 1.5rem;
        border-radius: var(--radius-md);
    }

    .faq-item h3 {
        font-size: 1.1rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .faq-contact {
        text-align: center;
        margin-top: 2rem;
    }

    /* Final CTA */
    .final-cta {
        background: var(--color-primary);
        color: white;
        text-align: center;
        padding: 4rem 0;
        margin-bottom: 4rem;
        margin-top: 4rem;
        border-radius: var(--radius-lg);
    }

    .final-cta h2 {
        color: white;
        margin-bottom: 1rem;
    }

    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn-outline {
        display: inline-block;
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        border-radius: var(--radius-sm);
        transition: all 0.2s;
    }

    .btn-outline:hover {
        background: var(--color-primary);
        color: white;
    }

    /* Fix CTA Buttons visibility */
    .final-cta .btn-primary {
        background-color: white;
        color: var(--color-primary);
        border: 2px solid white;
    }
    .final-cta .btn-primary:hover {
        background-color: transparent;
        color: white;
    }
    .final-cta .btn-secondary {
        border: 2px solid white;
        color: white;
        background-color: transparent;
    }
    .final-cta .btn-secondary:hover {
        background-color: white;
        color: var(--color-primary);
    }

    /* Dark Mode Overrides */
    :global([data-theme="dark"]) .careers-page {
        background-color: var(--color-bg-main, #111827);
    }

    :global([data-theme="dark"]) .page-header,
    :global([data-theme="dark"]) .benefits-section {
        background-color: var(--color-bg-alt, #1f2937);
    }

    :global([data-theme="dark"]) .language-notice {
        background-color: var(--color-bg-card, #1f2937);
        border-color: var(--color-border, #374151);
        color: #e5e7eb;
    }

    :global([data-theme="dark"]) .role-card,
    :global([data-theme="dark"]) .benefit-card,
    :global([data-theme="dark"]) .faq-item,
    :global([data-theme="dark"]) .model-card,
    :global([data-theme="dark"]) .info-box {
        background-color: var(--color-bg-card, #1f2937);
        border-color: var(--color-border, #374151);
    }

    :global([data-theme="dark"]) .role-card h3,
    :global([data-theme="dark"]) .benefit-card h3,
    :global([data-theme="dark"]) .faq-item h3,
    :global([data-theme="dark"]) .model-card h3,
    :global([data-theme="dark"]) .info-box h3 {
        color: #ffffff;
    }

    :global([data-theme="dark"]) .role-card p,
    :global([data-theme="dark"]) .benefit-card p,
    :global([data-theme="dark"]) .faq-item p,
    :global([data-theme="dark"]) .model-card p,
    :global([data-theme="dark"]) .info-box p,
    :global([data-theme="dark"]) .subtitle,
    :global([data-theme="dark"]) .lead,
    :global([data-theme="dark"]) .section-desc,
    :global([data-theme="dark"]) .role-card ul {
        color: var(--color-text-main, #e5e7eb);
    }

    :global([data-theme="dark"]) .info-box .icon {
        color: var(--color-primary-light, #60a5fa);
    }
</style>
