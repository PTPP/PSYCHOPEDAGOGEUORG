<style>
    .contact-page {
        /* background-color: #fff; Removed to show global animation */
        /* min-height: 100vh; Handled by layout */
        padding-bottom: 4rem;
    }

    .page-header {
        background-color: var(--color-bg-alt);
        padding: 3rem 0;
        text-align: center;
        border-bottom: 1px solid #eee;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--color-text-light);
    }

    .info-card h2,
    .locations-section h2,
    .bank-section h2,
    .docs-section h2,
    .values-section h2 {
        color: var(--color-primary);
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    /* Grid Layouts */
    .main-info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    @media (min-width: 992px) {
        .main-info-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    .secondary-info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-bottom: 4rem;
    }

    @media (min-width: 992px) {
        .secondary-info-grid {
            grid-template-columns: 2fr 1fr;
        }
    }

    /* Org Info */
    .org-info {
        background: var(--color-bg-card);
        padding: 2rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .address-block {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .legal-ids {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        font-size: 0.9rem;
        margin-top: 1rem;
        opacity: 0.8;
    }

    .contact-methods {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .method {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .method a {
        color: var(--color-text);
        font-weight: 500;
        transition: color 0.2s;
    }

    .method a:hover {
        color: var(--color-primary);
    }

    .alert-box {
        background: var(--color-bg-alt);
        color: var(--color-text);
        padding: 1rem;
        border-radius: var(--radius-sm);
        border: 1px solid var(--color-primary-light);
        font-weight: 500;
    }

    /* Locations */
    .locations-grid {
        display: grid;
        gap: 1.5rem;
    }

    .location-card {
        background: var(--color-bg-card);
        border: 1px solid var(--color-bg-alt); /* slightly softer border */
        padding: 1.5rem;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
    }

    .location-card h3 {
        color: var(--color-text);
        font-size: 1.3rem;
        margin-bottom: 0.2rem;
    }

    .loc-desc {
        color: var(--color-primary);
        font-weight: 500;
        margin-bottom: 0.8rem;
    }

    /* Bank Section */
    .bank-section {
        background: var(--color-bg-card);
        border: 1px solid #eee;
        padding: 2rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .bank-card {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #eee;
    }

    .bank-card:last-of-type {
        border-bottom: none;
        padding-bottom: 0;
        margin-bottom: 1rem;
    }

    .bank-card h3 {
        font-size: 1.1rem;
        text-transform: uppercase;
        color: var(--color-text-light);
        margin-bottom: 0.5rem;
    }

    .note {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        font-style: italic;
    }

    .iban {
        font-family: monospace;
        font-size: 1.3rem;
        color: var(--color-primary);
        font-weight: 700;
        letter-spacing: 1px;
    }

    .swift {
        margin-top: 1rem;
        font-size: 0.95rem;
    }

    /* Docs */
    .docs-links {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .doc-link {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1rem;
        background: var(--color-bg-alt);
        border-radius: var(--radius-md);
        color: var(--color-text);
        font-weight: 500;
        transition: all 0.2s;
    }

    .doc-link:hover {
        background: var(--color-primary-light);
        color: var(--color-primary);
    }

    /* Values */
    .values-section {
        text-align: center;
        background: var(--color-primary);
        color: white;
        padding: 3rem;
        border-radius: var(--radius-lg);
    }

    .values-section h2 {
        color: white;
        margin-bottom: 0.5rem;
    }

    .cert-note {
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .values-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
    }

    .value-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .check {
        background: white;
        color: var(--color-primary);
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: bold;
        font-size: 0.8rem;
    }
</style>
