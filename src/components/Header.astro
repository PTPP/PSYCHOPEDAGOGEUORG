const { path: switchLink } = getAlternateLink(currentPath, lang);
const switchLabel = lang === "pl" ? "English" : "Polski";
---

<header class="header">
  <div class="container header-container">
    <div class="logo">
      <a href={lang === "pl" ? "/" : "/en"} class="logo-link">
        <Image
          src={logoImg}
          alt="TPP BolesÅ‚awiec Logo"
          width={50}
          densities={[1.5, 2]}
          loading="eager"
        />
        <div class="logo-text">
          <span class="main"
            >{lang === "pl" ? "Towarzystwo" : "Psychopedagogical"}</span
          >
          <span class="sub"
            >{lang === "pl" ? "Psychopedagogiczne" : "Association"}</span
          >
        </div>
      </a>
    </div>

    <div class="header-actions">
      <button id="menu-btn" class="menu-btn" aria-label="Menu">
        <span class="hamburger"></span>
      </button>
    </div>
  </div>
</header>

<div id="fullscreen-menu" class="fullscreen-menu">
  <nav class="fullscreen-nav">
    <ul class="nav-list">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={item.accent ? "btn btn-primary nav-item" : "nav-item"}
            >
              {item.icon && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="nav-icon"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d={item.icon} />
                </svg>
              )}
              <span class="nav-label">{item.label}</span>
            </a>
          </li>
        ))
      }
      <li class="lang-switch-item">
        <a
          href={switchLink}
          class="lang-switch"
          data-lang={lang === "pl" ? "en" : "pl"}
        >
          <span class="flag">{lang === "pl" ? "ðŸ‡¬ðŸ‡§" : "ðŸ‡µðŸ‡±"}</span>
          <span class="nav-label">{switchLabel}</span>
        </a>
      </li>
      <li class="theme-switch-item">
        <button
          id="theme-toggle"
          class="theme-toggle menu-theme-toggle"
          aria-label="Toggle Theme"
        >
          <svg
            class="icon-sun"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><circle cx="12" cy="12" r="5"></circle><line
              x1="12"
              y1="1"
              x2="12"
              y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line
              x1="4.22"
              y1="4.22"
              x2="5.64"
              y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
            ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
              x1="21"
              y1="12"
              x2="23"
              y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"
            ></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg
          >
          <svg
            class="icon-moon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
            ></path></svg
          >
        </button>
      </li>
    </ul>
  </nav>
</div>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const fullscreenMenu = document.getElementById("fullscreen-menu");
  const navLinks = document.querySelectorAll(".nav-item");

  if (menuBtn && fullscreenMenu) {
    const toggleMenu = () => {
      menuBtn.classList.toggle("active");
      fullscreenMenu.classList.toggle("active");
      document.body.classList.toggle("no-scroll");
    };

    menuBtn.addEventListener("click", toggleMenu);

    // Close menu when clicking a link
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (fullscreenMenu.classList.contains("active")) {
          toggleMenu();
        }
      });
    });
  }

  // Language Switch Logic - persist preference
  const langLink = document.querySelector(".lang-switch");
  if (langLink) {
    langLink.addEventListener("click", (e) => {
      const href = (e.currentTarget as HTMLElement).getAttribute("href");
      const targetLang = href && href.startsWith("/en") ? "en" : "pl";
      localStorage.setItem("lang", targetLang);
    });
  }

  // Theme Toggle Logic
  const themeToggle = document.getElementById("theme-toggle");

  if (themeToggle) {
    // Sync initial icon state
    const currentTheme = document.documentElement.getAttribute("data-theme");
    if (currentTheme === "dark") {
      themeToggle.classList.add("dark");
    }

    themeToggle.addEventListener("click", () => {
      const html = document.documentElement;
      const newTheme =
        html.getAttribute("data-theme") === "dark" ? "light" : "dark";

      html.setAttribute("data-theme", newTheme);
      localStorage.setItem("theme", newTheme);
      themeToggle.classList.toggle("dark");
    });
  }
</script>

<style>
  .header {
    background: var(--color-bg-header);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 1010;
    box-shadow: var(--shadow-sm);
    padding: var(--spacing-sm) 0;
  }

  :global(body.no-scroll) {
    overflow: hidden;
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    z-index: 1001; /* Above menu */
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    color: var(--color-text);
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }

  .logo-text .main {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .logo-text .sub {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text);
    opacity: 0.8;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* Hamburger Button - Visible Always */
  .menu-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: block;
    z-index: 1002;
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    position: relative;
    transition: all 0.3s;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--color-text);
    left: 0;
    transition: all 0.3s;
  }

  .hamburger::before {
    top: -8px;
  }
  .hamburger::after {
    bottom: -8px;
  }

  .menu-btn.active .hamburger {
    background: transparent;
  }
  .menu-btn.active .hamburger::before {
    transform: rotate(45deg);
    top: 0;
  }
  .menu-btn.active .hamburger::after {
    transform: rotate(-45deg);
    bottom: 0;
  }

  /* Fullscreen Menu */
  .fullscreen-menu {
    position: fixed;
    inset: 0;
    background: var(--color-bg-header);
    backdrop-filter: blur(10px);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    overflow-y: auto;
    padding-top: 100px;
    padding-bottom: 2rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease-in-out;
  }

  .fullscreen-menu.active {
    opacity: 1;
    pointer-events: all;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
    align-items: center;
  }

  .nav-item {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-item:hover {
    color: var(--color-primary);
  }

  .nav-icon {
    width: 28px;
    height: 28px;
    opacity: 0.8;
  }

  .nav-item:hover .nav-icon {
    opacity: 1;
    transform: scale(1.1);
    transition: all 0.2s;
  }

  .nav-item.btn {
    font-size: 1.2rem;
    padding: 0.8rem 2rem;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.2rem;
    color: var(--color-text-light);
    border: 1px solid #ddd;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    margin-top: 1rem;
  }
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Theme Toggle */
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text);
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background 0.2s;
  }

  .menu-theme-toggle {
    border: 1px solid #ddd;
    width: 44px;
    height: 44px;
    margin-top: 0.5rem;
  }

  .theme-toggle:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .icon-sun,
  .icon-moon {
    width: 24px;
    height: 24px;
    transition: transform 0.5s ease;
  }

  /* Logic for showing/hiding icons based on class */
  .theme-toggle .icon-moon {
    display: none;
  }
  .theme-toggle .icon-sun {
    display: block;
  }

  /* When dark mode is active (button has .dark class) */
  .theme-toggle.dark .icon-moon {
    display: block;
  }
  .theme-toggle.dark .icon-sun {
    display: none;
  }
</style>
