<div class="background-animation">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
</div>

<style>
    .background-animation {
        position: fixed;
        top: 0;
        left: 0;
        inset: 0;
        z-index: -1;
        overflow: hidden;
        pointer-events: none;
        background: linear-gradient(
            135deg,
            var(--color-bg-body) 0%,
            var(--color-bg-alt) 100%
        );
    }

    /* Explicit dark mode override for the container background to ensure it sticks */
    :global([data-theme="dark"]) .background-animation {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    .blob {
        position: absolute;
        border-radius: 50%;
        opacity: 0.6;
        /* Use radial gradient to avoid hard edges and ensuring smooth fade */
        background: radial-gradient(
            circle,
            var(--blob-color) 0%,
            transparent 70%
        );
        /* Blur helps blend the gradient even more */
        filter: blur(40px);
        will-change: transform;
    }

    .blob-1 {
        --blob-color: var(--color-primary-light);
        top: -10%;
        left: -10%;
        width: 70vw; /* Larger size */
        height: 70vw;
        animation: float-1 25s infinite ease-in-out alternate;
    }

    .blob-2 {
        --blob-color: var(--color-secondary-dark);
        bottom: -10%;
        right: -20%;
        width: 80vw;
        height: 80vw;
        animation: float-2 30s infinite ease-in-out alternate;
    }

    .blob-3 {
        --blob-color: var(--color-accent);
        top: 40%;
        left: 30%;
        width: 60vw;
        height: 60vw;
        opacity: 0.2; /* Subtler accent */
        animation: float-3 28s infinite ease-in-out alternate;
    }

    /* Dark mode overrides for blobs */
    :global([data-theme="dark"]) .blob {
        opacity: 0.25;
    }

    :global([data-theme="dark"]) .blob-1 {
        --blob-color: var(--color-primary);
    }

    :global([data-theme="dark"]) .blob-2 {
        --blob-color: #334155;
    }

    :global([data-theme="dark"]) .blob-3 {
        --blob-color: var(--color-accent);
        opacity: 0.1;
    }

    /* More dynamic float animations */
    @keyframes float-1 {
        0% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(50px, 50px) scale(1.1);
        }
        66% {
            transform: translate(-30px, 80px) scale(0.95);
        }
        100% {
            transform: translate(20px, -20px) scale(1.05);
        }
    }

    @keyframes float-2 {
        0% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(-50px, -40px) scale(1.1) rotate(10deg);
        }
        66% {
            transform: translate(40px, -60px) scale(0.9) rotate(-5deg);
        }
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
    }

    @keyframes float-3 {
        0% {
            transform: translate(0, 0) scale(1);
        }
        50% {
            transform: translate(-60px, 40px) scale(1.2);
        }
        100% {
            transform: translate(40px, -30px) scale(0.9);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .blob {
            animation: none;
        }
    }
</style>
